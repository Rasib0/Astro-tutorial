<style>
  
header {
  display: flex;
  align-items: center;
  border-radius: 0.25rem;
}
/* nav styles */

nav {
  width: 100%;
}

.nav-links {
  width: 100%;
  display: none;
}

.nav-link {
  display: block;
  margin: 6px 16px;
}

.expanded {
  display: unset;
}

  .hamburger {
    padding-top: 0.5rem;
    padding-left: 0.5rem;
  }

  .line {
    margin-bottom: 8px;
  }

  .hamburger .line {
    display: block;
    width: 40px;
    height: 5px;
    background-color: black;
    /*background-color: var(--hovered);*/
  }

  .hover-underline-animation {
    text-decoration: none !important;
    position: relative;
    overflow: hidden;
    display: inline-block;
    font-weight: 700;
    color: var(--nav);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: bold;
  }

  .hover-underline-animation::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
    width: 100%;
    z-index: -1;
    height: 2px;
    background-color: var(--nav);
    transition: transform 300ms ease-in-out 40ms;
    transform: translateX(-100%);
  }

  .hover-underline-animation:hover::before {
    transform: translateX(0);
  }

  /* BIG SCREEN */

  @media screen and (min-width: 636px) {
  .nav-links {
    display: flex;
  }

  .nav-link {
    margin: 12px 18px;
  }

  .hamburger {
    display: none;
  }

  .grow {
  flex-grow: 1;
}
}


</style>
