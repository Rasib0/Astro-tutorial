  .expanded {
    display: unset;
  }

  .hover-underline-animation {
    text-decoration: none !important;
    position: relative;
    overflow: hidden;
    display: inline-block;
    font-weight: 700;
    color: var(--nav);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: bold;
  }

  .hover-underline-animation::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
    width: 100%;
    z-index: -1;
    height: 2px;
    background-color: var(--nav);
    transition: transform 300ms ease-in-out 40ms;
    transform: translateX(-100%);
  }

  .hover-underline-animation:hover::before {
    transform: translateX(0);
  }

  /* BIG SCREEN */

  @media screen and (min-width: 636px) {
    .nav-links {
      display: flex;
    }

    .nav-link {
      margin: 12px 18px;
    }

    .hamburger {
      display: none;
    }

    .grow {
      flex-grow: 1;
    }
  }
</style>
