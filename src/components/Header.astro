<style>
  .hamburger {
    padding-top: 1rem;
    padding-left: 1rem;
  }

  .line {
    margin-bottom: 8px;
  }

  .hamburger .line {
    display: block;
    width: 40px;
    height: 5px;
    background-color: black;
    /*background-color: var(--hovered);*/
  }

  .hover-underline-animation {
    text-decoration: none !important;
    position: relative;
    overflow: hidden;
    display: inline-block;
    color: var(--nav);
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: bold;
  }

  .hover-underline-animation::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
    width: 100%;
    z-index: -1;
    height: 2px;
    background-color: var(--nav);
    transition: transform 300ms ease-in-out 40ms;
    transform: translateX(-100%);
  }

  .hover-underline-animation:hover::before {
    transform: translateX(0);
  }
</style>
<header>
  <nav>
    <div class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
    <div class="nav-links">
      <a class="hover-underline-animation" draggable="false" href="/">Home</a>
      <a class="hover-underline-animation" draggable="false" href="/about"
        >About</a
      >
      <a class="hover-underline-animation" draggable="false" href="/projects"
        >Projects</a
      >
      <a class="hover-underline-animation" draggable="false" href="/blog"
        >Blog</a
      >
    </div>
  </nav>
</header>
