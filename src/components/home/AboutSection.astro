---
const identity = {
  firstName: "Rasib",
  country: "Pakistan",
  occupation: "Software Engineer",
  company: "",
  hobbies: ["Reading", "Youtube", "Coding"],
};

const whoami = [
  "a Arch user 🐧",
  "a vim user ✨",
  "a Bookworm 📚",
  "a anime fan 🍿",
  "a Python hater 🐍",
  "an AI enthusiast 🤖",
];

const interests = ["competitive programming", "learning new languages"];

const lastInterest = interests.pop();
---

<section id="about">
  <div class="about-grid-wrapper">
    <div>
      <h1>
        Hi, I'm <span date-value="rasib" class="name">rasib</span>
      </h1>
      <h2 class="intro-subtext">
        {
          `I am a ${identity.occupation} ${identity.company === "" ? "" : "@"}${
            identity.company
          } and`
        }
        <span id="other-occupation">{whoami[0]}</span>
      </h2>
      <p>
        I am a CS student from <strong>IBA</strong> who is passionate about making
        performant and accessible software. I am also into
        {
          interests.map((interest) => (
            <span class="interests">
              <a href="https://github.com/Rasib0/competitive-programming">
                {interest}
              </a>
              ,
            </span>
          ))
        } and <span class="interests">{lastInterest}</span>.
      </p>
      <div class="p-2"></div>

      <p>
        <a role="button" href="/about">More about me 👀 →</a>
      </p>
    </div>
    <figure>
      <div class="flex justify-center">
        <img
          alt="a picture of a cat coding using a laptop"
          class="codingcat-img"
          width="400"
          height="270"
          src="codingcat.gif"
        />
      </div>
      <figcaption class="font-mono codingcat-caption">
        Here's a cat picture to make you feel cozy
        <span id="codingcat-caption-emoji">😇</span>
      </figcaption>
    </figure>
  </div>
</section>

<!-- h2 animation -->
<script define:vars={{ whoami }}>
const other_occupation = document.querySelector("#other-occupation");

let i = 1;

function updateText() {
  if (i > whoami.length - 1) {
    i = 0;
  }

  other_occupation.style.opacity = 0;

  setTimeout(() => {
    other_occupation.textContent = whoami[i];
    other_occupation.style.opacity = 1;
    i++;
  }, 600);
}

setInterval(updateText, 3600);
</script>

<style>
  .name {
    color: var(--secondary-color);
    filter: drop-shadow(0 1px 2px var(--blue-200))
      drop-shadow(0 1px 1px rgb(0 0 0 / 0.06));
  }
  .about-grid-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 8px;
    align-items: center;
  }

  figure {
    overflow: hidden;
    justify-content: center;
  }
  .codingcat-img {
    box-shadow: 0px 0px 10px 0px var(--blue-200);
    border-radius: 0.5rem;
    margin-top: 2rem;
    overflow: hidden;
  }

  #codingcat-caption-emoji {
    font-style: normal;
  }

  :global(.dark) .codingcat-img {
    box-shadow: 0 1px 10px 0 var(--blue-500);
  }

  .codingcat-caption {
    padding: 0.5rem;
    font-size: 16px;
    text-align: center;
    font-weight: 300;
    color: var(--tertiary-color-dark);
  }

  .name::after {
    content: "⚡";
    font-size: 1.8rem;
  }

  #other-occupation {
    transition: opacity 0.5s ease-in-out;
    display: inline-block;
    /* align left  */
    text-align: left;
  }

  section {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
