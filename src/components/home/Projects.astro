---
import { getCollection } from "astro:content";
import Tags from "../Tags.astro";
const allProjects = await getCollection("projects");

const { number } = Astro.props;
---

<div class="grid">
  {
    allProjects
      .map((project) => (
        <div class="project-card" id={project.slug}>
          <div class="project-card-header">
            <span class="title">
              {project.data.title}
              <span class="date">{project.data.pubDate.toDateString()}</span>
            </span>
            <div class="links">
              <a class="link-button" href={project.data.link}>
                Live
              </a>
              <a class="repo-button" href={project.data.repo}>
                Github
              </a>
            </div>
          </div>
          <p class="project-card-desc mb-auto">
            {project.data.description}
            {/* <a href={"/projects/" + project.slug}>Learn more</a>*/}
          </p>
          <br />
          <div class="tags">
            <Tags tags={project.data.tags} nolink={true} />
          </div>
        </div>
      ))
      .slice(0, number)
  }
</div>
<script define:vars={{ allProjects }}>
allProjects.map((project) => {
  const projectCard = document.getElementById(project.slug);

  if (projectCard == null) return;

  projectCard.onclick = function (e) {
    window.location.href = "/projects/" + project.slug;
  };

  const linkButton = document.querySelector(".link-button");
  const repoButton = document.querySelector(".repo-button");

  linkButton.onclick = function (e) {
    e.stopPropagation();
  };

  repoButton.onclick = function (e) {
    e.stopPropagation();
  };
});
</script>
<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 15px;
    align-items: stretch;
    margin-top: 36px;
    padding-bottom: 6px;
  }

  @media screen and (min-width: 1024px) {
    .grid {
      margin-top: 36px;
    }
  }

  .project-card-desc {
    padding: 4px 12px;
    font-size: 18px;
    margin-bottom: auto;
  }

  .tags {
    padding: 10px 12px;
  }

  .links {
    display: flex;
    justify-content: flex-end;
    gap: 8px;
    flex-wrap: wrap;
  }

  .link-button,
  .repo-button {
    text-align: center;
    padding: 4px 8px;
    text-transform: uppercase;
    font-size: 16px;
    color: var(--ui-color-dark);
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 300ms ease-in-out;
  }

  .title {
    text-transform: none;
  }

  .link-button:hover,
  .repo-button:hover {
    text-decoration: none;
    background-color: var(--red-200);
  }

  :global(.dark) .link-button:hover,
  :global(.dark) .repo-button:hover {
    background-color: var(--red-600);
  }

  .date {
    font-size: 12px;
    position: absolute;
    top: -25px;
    left: 0;
  }
  .project-card-header {
    background-color: var(--red-200);
    display: flex;
    justify-content: space-between;
    padding: 4px 12px;
    transition: inherit;
    position: relative;
  }

  :global(.dark) .project-card-header {
    background-color: var(--red-950);
  }

  .project-card {
    box-shadow: 0 1px 2px var(--red-300);
    display: flex;
    cursor: pointer;
    margin-bottom: 18px;
    background-color: var(--red-100);
    flex-direction: column;
    transform: scale(1);
    transition: transform 200ms ease-in-out, box-shadow 200ms ease-in-out,
      background-color 200ms ease-in-out;
  }

  .project-card:hover {
    box-shadow: 0 1px 5px var(--red-500);
    background-color: var(--red-200);
    transform: scale(1.01) perspective(1px);
  }

  .project-card:hover .project-card-header {
    background-color: var(--red-300);
  }

  :global(.dark) .project-card {
    box-shadow: 0 1px 2px var(--red-700);
    background-color: var(--background-color);
  }

  :global(.dark) .project-card:hover {
    box-shadow: 0 1px 5px var(--red-500);
    background-color: var(--red-900);
  }

  :global(.dark) .project-card:hover .project-card-header {
    background-color: var(--red-700);
  }

  section > h2 {
    color: var(--red-700);
  }
</style>
