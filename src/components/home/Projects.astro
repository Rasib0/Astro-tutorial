---
import { getCollection } from "astro:content";
import Tags from "../Tags.astro";
const allProjects = await getCollection("projects");
---

<div class="grid">
  {
    allProjects.map((project) => (
      <div class="project-card">
        <div class="project-card-header">
          <a href={"/projects/" + project.slug} class="title">
            {project.data.title}
          </a>
          <div class="links">
            <a class="link-button" href={project.data.link}>
              Live
            </a>
            <a class="repo-button" href={project.data.repo}>
              Github
            </a>
          </div>
        </div>
        <p class="date">Created: {project.data.pubDate.toLocaleDateString()}</p>
        <p class="project-card-desc">
          {project.data.description}
          {/* <a href={"/projects/" + project.slug}>Learn more</a>*/}
        </p>
        <div class="tags">
          <Tags tags={project.data.tags} nolink={true} />
        </div>
      </div>
    ))
  }
</div>
<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    align-items: stretch;
  }
  .title {
    margin: 0px;
    font-weight: 700;
    font-family: monospace;
    color: white;
    font-size: 1.1rem;
  }

  .project-card-desc {
    margin-bottom: auto;
  }

  .links {
    display: flex;
    justify-content: flex-end;
    gap: 8px;
    flex-wrap: wrap;
  }

  .link-button,
  .repo-button {
    padding: 0.3rem 0.5rem;
    border-radius: 5px;
    background-color: var(--button-color);
    color: white;
    text-decoration: none;
    white-space: nowrap;
    font-size: 0.8rem;
  }

  .link-button:hover,
  .repo-button:hover {
    background-color: var(--button-hover);
    text-decoration: none;
  }

  .date {
    font-family: 300;
    font-size: 12px;
  }
  .project-card-header {
    /* background-color: var(--ui-color); */
    background-color: black;
    display: flex;
    color: white;
    border-bottom: 2px solid var(--ui-color);
    justify-content: space-between;
    padding: 0.5rem 12px;
  }

  .project-card {
    margin-bottom: 0.5rem;
    /*color: var(--text-color); */
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    display: flex;
    padding-bottom: 0.5rem;
    border-radius: 5px;
    flex-direction: column;
    border: 2px solid var(--ui-color);
  }

  .tags {
    margin: 0.5rem 0.3rem 0 0.3rem;
    display: flex;
  }

  p {
    margin: 0.3rem 0.6rem;
  }
</style>
