---
import { getCollection } from "astro:content";
import Tags from "../Tags.astro";
const allProjects = await getCollection("projects");
---

<div class="project-main">
  {
    allProjects.map((project) => (
      <div class="project-card">
        <div class="project-card-header flex justify-between">
          <div class="title">{project.data.title}</div>
          <div class="links">
            <a class="link-button" href={project.data.link}>
              View it here
            </a>
            <a class="repo-button" href={project.data.repo}>
              View Github Repo
            </a>
          </div>
        </div>
        <div class="project-card-text">
          <p class="date">
            Created: {project.data.pubDate.toLocaleDateString()}
          </p>
          <p>{project.data.description}</p>
          <Tags tags={project.data.tags} nolink={true} />
          {/*<a href={"/projects/" + project.slug}>Learn more</a> */}
        </div>
      </div>
    ))
  }
</div>

<style>
  .title {
    margin: 0px;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .project-card-text {
    padding-inline: 1rem;
    border: 1px solid var(--nav-color);
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
  }

  .links {
    display: flex;
    justify-content: space-between;
    gap: 10px;
    flex-wrap: wrap;
  }

  .links > a {
    display: block;
  }

  .link-button,
  .repo-button {
    padding: 0.3rem 0.7rem;
    border-radius: 5px;
    background-color: var(--link-color);
    color: var(--background-color);
    text-decoration: none;
    white-space: nowrap;
    font-size: 0.8rem;
  }

  .link-button:hover,
  .repo-button:hover {
    background-color: var(--hover-color-light);
    color: var(--background-color);
    text-decoration: none;
  }

  .project-card-text > .date {
    font-family: 300;
    font-size: 12px;
  }

  p {
    margin: 0.2rem;
  }

  .project-card {
    margin-bottom: 1rem;
    color: var(--text-color);
    /* border: 1px solid var(--layout-color); */
    border-radius: 10px;
  }

  .project-card-header {
    background-color: var(--nav-color);
    color: var(--text-color);
    padding: 0.5rem 24px;
    border-radius: inherit;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    /* border-bottom: 1px solid var(--layout-color); */
  }
</style>
