---
const { pageTitle } = Astro.props;
import Footer from "../components/layoutComponents/Footer.astro";
import Header from "../components/layoutComponents/Header.astro";
import "../styles/global.css";
import "../styles/colors.css";
import "../styles/tailwind.css";
import "../styles/defaults.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,600;1,700&family=Space+Mono&display=swap"
      rel="stylesheet"
    />
    <meta
      name="description"
      content="Home to my awesome portfolio and blog where I talk about stuff I like (hire me pls),"
    />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
