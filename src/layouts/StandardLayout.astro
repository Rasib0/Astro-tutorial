---
const { pageTitle, titleFont } = Astro.props;
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import BaseLayout from "./BaseLayout.astro";

const newFont = titleFont || "";
---

<BaseLayout pageTitle={pageTitle}>
    <div class="flex flex-col items-center h-screen">
      <main class="mb-auto">
        {(
          newFont ? (
            <h1 style={`font-family: ${newFont};`}>{pageTitle}</h1>
            ) : (
              <h1 style={`font-family: ${newFont};`}>{pageTitle}</h1>
          ))
        }
        <slot />
      </main>
      <Footer />
    </div>
  </BaseLayout>
</html>
<style>
  .mb-auto {
    margin-bottom: auto;
  }
  .justify-between {
    justify-content: space-between;
  }

  .h-screen {
    min-height: 90vh;
  }
  </style>
