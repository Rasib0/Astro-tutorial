---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";

const identity = {
  firstName: "Rasib",
  country: "Pakistan",
  occupation: "Web Developer",
  hobbies: ["Reading", "Writing", "Coding"],
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "React",
  "Astro",
  "Python",
  "Rust",
];

const happy = true;
const finished = false;
const goal = 3;

const pageTitle = "About Me";

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<style define:vars={{ skillColor, fontWeight, textCase }}>
  .skill {
    color: var(--skillColor);
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <p>Here are a few facts about me:</p>
  <ul>
    <li>
      I am from {identity.country} and I work as a {identity.occupation}.
    </li>
    <li>
      Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
    </li>
    <li>
      I like playing with different technology. My editor of choice is nvim with
      tmux.
    </li>
    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}
    {finished && <p>finished this tutorial!</p>}
    {
      goal === 3 ? (
        <p>My goal is to finish in 3 days.</p>
      ) : (
        <p> My goal is not 3 days is not 3 days.</p>
      )
    }
  </ul>
</BaseLayout>
