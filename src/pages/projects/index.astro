<style>
  .project-card > div {
    padding: 0px 16px;
  }

  .project-card {
    width: 100%;
    padding: 2rem 0rem;
    margin: 2px;
    border: 1px solid #eaeaea;
    font-weight: 600;
    font-size: 1.2rem;
    border-radius: 10px;
  }
</style>
